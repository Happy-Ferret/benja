export OS_KERNEL='linux-odroid-c2'
export OS_HEADERS='linux-odroid-c2-headers'
export OS_ARCHIVE='ArchLinuxARM-odroid-c2-latest.tar.gz'
export OS_MAX_RESOLUTION=1280x720

# partition_sd /dev/mmblk0 3200M
partition_sd() {
  local DISK=$1
  local ROOT_SIZE=$2
  sudo dd if=/dev/zero of=$DISK bs=1024 count=8
  sync
  sleep 2
  if [ "$(uname)" = "Darwin" ]; then
    echo 'I HAVE NO IDEA WHAT TO DO'
    exit 1
  else
    sudo parted --script $DISK mklabel msdos
    sudo parted --script --align optimal $DISK mkpart primary ext4 2048s $ROOT_SIZE
    sudo parted --script --align optimal $DISK mkpart primary fat32 $ROOT_SIZE 100%
  fi
  echo 'OK'
}

# returns ordered partitions
get_partitions() {
  local DISK=$1
  local POSSIBLEDISKS=$(ls ${DISK}*)
  local ROOT=""
  local WWW=""
  local CHOICE=""
  for CHOICE in $POSSIBLEDISKS; do
    if [ "$CHOICE" != "$DISK" ]; then
      if [ "$ROOT" = "" ]; then
        ROOT="$CHOICE"
      else
        WWW="$CHOICE"
      fi
    fi
  done

  echo "${ROOT} ${WWW}"
}

# format_sd /dev/mmblk0
format_sd() {
  local DISK=$1
  local ROOT=$2
  local WWW=$3

  if [ "$(uname)" = "Darwin" ]; then
    echo 'I HAVE NO IDEA WHAT TO DO'
    exit 1
  else
    yes | sudo mkfs.ext4 "$ROOT"
    sudo mkfs.vfat "$WWW"
  fi

  echo 'OK'

}

# install_os /dev/mmblk0 Archive.gz
install_os() {
  local ARCHIVE="$1"
  local DISK=$2
  local ROOT=$3

  mkdir -p root
  sudo mount $ROOT root
  sudo bsdtar -xpf "$ARCHIVE" -C root
  sync
  cd root/boot
  # sudo sed -i 's/^setenv m "1080p"/# setenv m "1080p"/' boot.ini
  sync
  # sudo sed -i 's/^# setenv m "720p"/setenv m "720p"/' boot.ini
  sync
  sudo sh sd_fusing.sh $DISK
  sync
  sleep 2
  cd ../..
}

# finalize installation
unmount_os() {
  local ROOT=$1
  sudo umount $ROOT
}

# install and configure the platform
configure_platform() {
  sed -i "s/rootwait/rootwait quiet splash loglevel=0/" /boot/boot.ini
  pacman -S --needed --noconfirm odroid-c2-libgl-fb weston xf86-video-fbdev
}
